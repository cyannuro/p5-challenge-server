{
    "editor.formatOnSave": false,
    "files.autoSave": "off",
    "javascript.format.enable": false,
    "eslint.alwaysShowStatus": true,
    "eslint.options": {
        "extensions": [
            ".html",
            ".js",
            ".jsx"
        ]
    },
    "eslint.validate": [
        "html",
        "javascript",
        "javascriptreact"
    ],
    "eslint.workingDirectories": [
        "./client",
        "./server"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    }
}